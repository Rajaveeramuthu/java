
    public static void main(String[] args){
        int n=4;
        char ch='1';
        for(int i=0;i<n;i++){
            for(int j=i;j<n-1;j++){
                System.out.print(" ");
            }
            for(int j=0;j<=i;j++){
                System.out.print((char)(ch+j));
            }
              for(int j=i-1;j>=0;j--){
                System.out.print((char)(ch+j));
            }
            System.out.println();
        }
    }
}
