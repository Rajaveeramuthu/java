
import java.util.*;

class MyArray {

    ArrayList<Integer> arr = new ArrayList<>();

    void getInput(Scanner sc) {
        System.out.print("Enter number of elements: ");
        int size = sc.nextInt();
        System.out.println("Enter elements:");
        for (int i = 0; i < size; i++) {
            arr.add(sc.nextInt());
        }
    }

    void insertAtStart(int val) {
        arr.add(0, val);
    }

    void insertAtEnd(int val) {
        arr.add(val);
    }

    void insertAtIndex(int index, int val) {
        arr.add(index, val);
    }

    void removeAtStart() {
        if (!arr.isEmpty()) {
            arr.remove(0);
        }
    }

    void removeAtEnd() {
        if (!arr.isEmpty()) {
            arr.remove(arr.size() - 1);
        }
    }

    void removeAtIndex(int index) {
        arr.remove(index);
    }

    void display() {
        System.out.println(arr);
    }
}

public class array {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        MyArray obj = new MyArray();

        obj.getInput(sc);

        System.out.print("Enter value to insert at start: ");
        obj.insertAtStart(sc.nextInt());
        obj.display();

        System.out.print("Enter value to insert at end: ");
        obj.insertAtEnd(sc.nextInt());
        obj.display();

        System.out.print("Enter index to insert: ");
        int m = sc.nextInt();
        System.out.print("Enter value: ");
        obj.insertAtIndex(m, sc.nextInt());
        obj.display();

        System.out.println("Enter the Remove value at start: ");
        obj.removeAtStart();
        obj.display();

        System.out.println("Remove the value At End : ");
        obj.removeAtEnd();
        obj.display();

        System.out.println("Remove the value At index: ");
        obj.removeAtIndex(sc.nextInt());
        obj.display();

    }
}
